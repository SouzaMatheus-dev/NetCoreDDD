<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contas Bancárias</title>
    <link rel="stylesheet" href="~/css/app.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
</head>
<body>
    @*INICIO DO HEADER*@
    <div id="header" class="header navbar-default">
        <div class="navbar-header">
            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                <span>
                    <small>
                        <span>CONTAS <b style="color: var(--dark-blue);">BANCÁRIAS</b></span>
                    </small>
                </span>
            </a>
        </div>

        <ul class="navbar-nav navbar-right">
            <li class="navbar-form">
                <form action="" method="POST" name="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Pesquise por Aqui">
                        <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </li>

            <li class="dropdown navbar-user show">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-bars" style="color: var(--dark-blue);" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </div>
    @*FIM DO HEADER*@

    @*INICIO DA SIDEBAR*@
    <div id="sidebar" class="sidebar">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 100%;">

            <ul class="nav">
                <li class="nav-profile">
                    <a href="javascript:;" data-toggle="nav-profile">
                        <div class="cover with-shadow"></div>
                        <div class="image">
                        </div>
                        <div class="info">
                            <b class="caret pull-right"></b>
                        </div>
                    </a>
                </li>
                <li>
                    <ul class="nav nav-profile">
                        <li><a href="javascript:;"><i style="color:var(--orange)" class="fa fa-cog"></i> Configurações</a></li>
                    </ul>
                </li>
            </ul>

            <ul class="nav">
                <li class="nav-header">Menu</li>
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home"></i>
                        <span>Principal</span>
                    </a>
                </li>

                <li class="has-sub active closed">
                    <a href="javascript:;">
                        <b class="caret"></b>
                        <i class=""></i>
                        <span>Contas Bancárias</span>
                    </a>
                    <ul class="sub-menu">

                        <li class="active">
                            <a @*href="@Url.Action(recurso.Action, recurso.Controller)"*@>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    @*FIM DA SIDEBAR*@

    @*RENDERIZA O RESTANTE DO CORPO*@
    <div id="content" class="content">
        @RenderBody()
    </div>

    <script src="~/js/app.min.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
</body>
</html>